{
  "private": true,
  "name": "pay-paper-viewer",
  "productName": "PayPaperViewer",
  "version": "2.0.0",
  "description": "더존 급여명세서를 열어볼 수 있는 뷰어",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "dev": "run-p dev:app",
    "dev:main": "cross-env NODE_ENV=development electron --lang=ko -r ts-node/register src/main/index.ts",
    "dev:app": "cross-env NODE_ENV=development webpack serve --config-name renderer",
    "postinstall": "electron-builder install-app-deps",
    "predist": "run-s clean",
    "dist": "run-s dist:*",
    "dist:build": "cross-env NODE_ENV=production webpack",
    "dist:pack": "electron-builder build",
    "lint": "eslint --ext ts,js --max-warnings 0 .",
    "clean": "rimraf main.js build dist"
  },
  "build": {
    "files": [
      "main.js",
      "build/"
    ],
    "extraResources": [
      {
        "from": "src/resources",
        "to": ".",
        "filter": [
          "*.lproj/*"
        ]
      }
    ],
    "afterSign": "scripts/notarize.js",
    "mac": {
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "src/build/entitlements.mac.plist",
      "entitlementsInherit": "src/build/entitlements.mac.plist",
      "electronLanguages": [
        "ko"
      ],
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "icon": false,
      "sign": false,
      "iconSize": 88,
      "contents": [
        {
          "x": 170,
          "y": 260
        },
        {
          "x": 435,
          "y": 260,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 600,
        "height": 400
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        },
        "portable"
      ]
    },
    "directories": {
      "buildResources": "src/resources",
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "minjunk",
      "repo": "pay-paper-viewer",
      "private": true,
      "publishAutoUpdate": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/minjunk/pay-paper-viewer.git"
  },
  "author": {
    "name": "Minjun Kim",
    "email": "hi@minjun.kim",
    "url": "https://github.com/minjunk"
  },
  "dependencies": {
    "@emotion/react": "11.1.4",
    "@emotion/styled": "11.0.0",
    "cheerio": "1.0.0-rc.3",
    "classnames": "2.2.6",
    "iconv-lite": "0.6.2",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "semantic-ui-css": "2.4.1"
  },
  "devDependencies": {
    "@types/cheerio": "0.22.21",
    "@types/classnames": "2.2.11",
    "@types/html-webpack-plugin": "3.2.4",
    "@types/mini-css-extract-plugin": "1.2.2",
    "@types/node": "14.0.27",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@types/webpack": "4.41.25",
    "@types/webpack-dev-server": "3.11.1",
    "@types/webpack-merge": "4.1.5",
    "@typescript-eslint/eslint-plugin": "3.7.1",
    "@typescript-eslint/parser": "3.7.1",
    "cross-env": "7.0.2",
    "css-loader": "4.2.0",
    "dotenv": "8.2.0",
    "electron": "15.5.5",
    "electron-builder": "22.10.4",
    "electron-notarize": "1.0.0",
    "eslint": "7.6.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-config-airbnb-typescript": "9.0.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-react": "7.20.5",
    "eslint-plugin-react-hooks": "4.0.8",
    "html-webpack-plugin": "4.5.0",
    "mini-css-extract-plugin": "1.3.3",
    "node-loader": "1.0.1",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.2",
    "strip-ansi": "6.0.0",
    "ts-loader": "8.0.2",
    "ts-node": "8.10.2",
    "typescript": "3.9.7",
    "webpack": "5.11.0",
    "webpack-cli": "4.2.0",
    "webpack-dev-server": "3.11.0",
    "webpack-merge": "5.7.3"
  }
}
